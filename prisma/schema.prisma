generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Minimal model to test database connection in Phase 1
model SystemHealth {
  id        String   @id @default(cuid())
  status    String
  checkedAt DateTime @default(now())

  @@map("system_health")
}

// User model for Phase 2: Authentication
model User {
  id          String            @id @default(cuid())
  email       String            @unique
  password    String            // bcrypt hashed
  name        String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  memberships GroupMembership[]
  recipes     Recipe[]          // Phase 4: Recipes created by this user
  favorites   Favorite[]        // Phase 6: User favorites

  @@map("users")
}

// Phase 3: Groups & Roles
enum Role {
  ADMIN
  POWER_USER
  READ_ONLY
}

model Group {
  id                 String            @id @default(cuid())
  name               String
  slug               String            @unique
  allowPowerUserEdit Boolean           @default(true)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  memberships        GroupMembership[]
  recipes            Recipe[]          // Phase 4: Recipes in this group
  categories         Category[]        // Phase 6: Categories in this group
  tags               Tag[]             // Phase 6: Tags in this group

  @@map("groups")
}

model GroupMembership {
  id       String   @id @default(cuid())
  role     Role     @default(READ_ONLY)
  joinedAt DateTime @default(now())
  userId   String
  groupId  String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([groupId])
  @@index([userId])
  @@map("group_memberships")
}

// Phase 4: Recipe model with structured ingredients and steps
model Recipe {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text

  // Structured JSON data
  ingredients Json     // Array of {quantity, unit, name, note}
  steps       Json     // Array of {stepNumber, instruction, notes}

  // Optional metadata
  servings    Int?
  prepTime    Int?     // minutes
  cookTime    Int?     // minutes
  notes       String?  @db.Text
  familyStory String?  @db.Text
  photoUrl    String?  // Phase 8: Photo upload

  // Relations
  createdBy   String
  creator     User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  groupId     String
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  // Phase 6 relations
  categories  RecipeCategory[]
  tags        RecipeTag[]
  favorites   Favorite[]        // Phase 6: Users who favorited this recipe

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([groupId])
  @@index([createdBy])
  @@index([title])
  @@map("recipes")
}

// Phase 6: Category model
model Category {
  id        String           @id @default(cuid())
  name      String
  slug      String
  groupId   String
  group     Group            @relation(fields: [groupId], references: [id], onDelete: Cascade)
  recipes   RecipeCategory[]

  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@unique([slug, groupId])
  @@index([groupId])
  @@map("categories")
}

// Phase 6: Tag model
model Tag {
  id        String     @id @default(cuid())
  name      String
  slug      String
  groupId   String
  group     Group      @relation(fields: [groupId], references: [id], onDelete: Cascade)
  recipes   RecipeTag[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([slug, groupId])
  @@index([groupId])
  @@map("tags")
}

// Phase 6: Junction table for Recipe-Category many-to-many
model RecipeCategory {
  id         String   @id @default(cuid())
  recipeId   String
  categoryId String
  recipe     Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([recipeId, categoryId])
  @@index([recipeId])
  @@index([categoryId])
  @@map("recipe_categories")
}

// Phase 6: Junction table for Recipe-Tag many-to-many
model RecipeTag {
  id       String @id @default(cuid())
  recipeId String
  tagId    String
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([recipeId, tagId])
  @@index([recipeId])
  @@index([tagId])
  @@map("recipe_tags")
}

// Phase 6: Favorite model for user-specific favorites
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  recipeId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, recipeId])
  @@index([userId])
  @@index([recipeId])
  @@map("favorites")
}
