generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Minimal model to test database connection in Phase 1
model SystemHealth {
  id        String   @id @default(cuid())
  status    String
  checkedAt DateTime @default(now())

  @@map("system_health")
}

// User model for Phase 2: Authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
